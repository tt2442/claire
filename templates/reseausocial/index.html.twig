{% extends 'admin.html.twig' %}

{% block title %}  Reseausocial 
{% endblock %}
{% block body %} <h1> Reseausocial </h1>
<div class='table-responsive'>
    <table class='table'>
        <thead><tr><th>Contact </th><th>Nom </th><th>Lien </th><th>Pseudo </th><th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for  reseausocial  in  reseausocials  %}
            <tr>
<td>{{reseausocial.contact|json_encode}}</td>
<td>{{reseausocial.nom}}</td>
<td>{{reseausocial.lien}}</td>
<td>{{reseausocial.pseudo}}</td><td>
                    <form method='post' action="{{ path('reseausocial_delete', {'id':  reseausocial.id }) }}" 
                    onsubmit="return confirm('Etes-vous sÃ»r de vouloir effacer cet item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~  reseausocial . id ) }}">
